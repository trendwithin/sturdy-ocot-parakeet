<div class="container">
      <h1><center>Subscripe through Stripe</center></h1>
  <div class="jumbotron devise">
    <div class="row">
      <div class="col-md-6">
        <%= form_tag subscription_path, id: 'payment-form' do %>
          <span class="payment-errors"></span>

          <div class="form-row">
            <label>
              <span>Card Number</span>
              <input value='4242 4242 4242 4242' type="text" size="20" data-stripe="number">
            </label>
          </div>

          <div class="form-row">
            <label>
              <span>Expiration (MM/YY)</span>
              <input value = '12' type="text" size="2" data-stripe="exp_month" id='exp_month'>
            </label>
            <span> / </span>
            <input value='20' type="text" size="2" data-stripe="exp_year" id='exp_year'>
          </div>

          <div class="form-row">
            <label>
              <span>CVC</span>
              <input value='123' type="text" size="4" data-stripe="cvc">
            </label>
          </div>

          <div class="form-row">
            <label>
              <span>Billing Zip</span>
              <input value='12345' type="text" size="6" data-stripe="address_zip">
            </label>
          </div>

          <input type="submit" class="submit" value="Submit Payment">
        <% end %>
      </div>
      <div class="col-md-6">
        Authorizing for $9.99 Monthly Recurring Charge.
      </div>
    </div>
  </div>
</div>
